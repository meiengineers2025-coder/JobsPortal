<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Posted Jobs</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <% include ../partials/navbar-employer %>

    <div class="container">
        <h2>Jobs You Posted</h2>

        <% if (jobs.length === 0) { %>
            <p>No jobs posted yet.</p>
        <% } else { %>

            <table class="job-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Location</th>
                        <th>Salary</th>
                        <th>Applicants</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% jobs.forEach(job => { %>
                        <tr>
                            <td><%= job.title %></td>
                            <td><%= job.location %></td>
                            <td><%= job.salary %></td>
                            <td>
                                <a href="/employer/applicants/<%= job.id %>" class="btn-small">
                                    View Applicants
                                </a>
                            </td>
                            <td>
                                <a href="/employer/edit-job/<%= job.id %>" class="btn-small">Edit</a>
                                
                                <form action="/employer/delete-job/<%= job.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn-small danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

        <% } %>

    </div>

</body>
</html>